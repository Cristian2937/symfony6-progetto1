
<div>
    {{form_start(form)}}
        <div class="my-2">
            {{form_label(form.title)}}
            {{form_widget(form.title, {'attr':{'style':'color:black','placeholder':'Enter the title...'}})}}
        </div>

        <div class="my-2">
            {{form_label(form.text)}}
            {{form_widget(form.text, 
                        {'attr':{'style':'color:black',
                                 'placeholder':'Enter the text...',
                                 'class':'block w-full shadow-sm border-gray-300 border'
                                 }
                        })
            }}
        </div>
        <div class="my-5">
            <button class="p-1.5 rounded-lg bg-cyan-500 text-white hover:bg-cyan-800" type='submit'>SAVE</button>
        </div>

        {{form_end(form)}}
</div>