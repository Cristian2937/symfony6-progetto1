{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}

    <div>
        <h1 class="my-5 text-lg">Create new Post</h1>
        {{form_start(form)}}
        <div>
            {{form_label(form.title)}}
        </div>
        <div class="my-2">
            {{form_widget(form.title, {'attr':{'style':'color:black','placeholder':'Enter the title...'}})}}
        </div>

        <div>
            {{form_label(form.text)}}
        </div>
        <div class="my-2">
            {{form_widget(form.text, {'attr':{'style':'color:black','placeholder':'Enter the text...'}})}}
        </div>
        <div class="my-5">
            <button class="p-1.5 rounded-lg bg-cyan-500 text-white hover:bg-cyan-800" type='submit'>SAVE</button>
        </div>

        {{form_end(form)}}
        
    </div>

{% endblock %}