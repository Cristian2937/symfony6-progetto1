{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}

    <div>
        <h1>Create new Post</h1>
        {{form_start(form)}}
        <div>
            {{form_label(form.title)}}
        </div>
        <div>
            {{form_widget(form.title, {'attr':{'style':'color:black','placeholder':'Enter the title...'}})}}
        </div>

        <div>
            {{form_label(form.text)}}
        </div>
        <div>
            {{form_widget(form.text, {'attr':{'style':'color:black','placeholder':'Enter the text...'}})}}
        </div>

        {{form_end(form)}}
        
    </div>

{% endblock %}