<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}
        {% if controller_name is null %}
        Welcome!
        {% else %}
        Welcome! | {{controller_name}}
        {% endif %}
        {% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://cdn.tailwindcss.com"></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block name %}{% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-slate-200 m-5">
<div class="text-right">
            <div class="text-sm text-gray-400">
                Login/Registration
            </div>
    <div class="w-full md:w-2/3 mx-auto mb-4 flex justify-between items-center">
        <div class="text-4xl">
            <a href="{{path('app_micro_post')}}">Home</a>
        </div>
        
    </div>

</div>

    <div class="w-full md:w-2/3 mx-auto">
        {% for message in app.flashes('success') %}
            <div style="border rounded-md p-2 border-green-300 bg-green-50">{{message}}</div>
        {% endfor %}
    </div>
         
        {% block body %}{% endblock %}
    </body>
</html>
